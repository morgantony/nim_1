<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:orientation="vertical">

    <com.bhm.sdk.bhmlibrary.views.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backGroundColor="@color/color_main"
        app:isLeftViewShow="true"
        app:isRightViewShow="false"
        app:leftViewBackgroundResource="@drawable/img_close_source"
        app:leftViewMarginLeft="15dp"
        app:rightText="• • •"
        app:rightTextColor="@color/white"
        app:titleBarHeight="50dp"
        app:titleText="扫描结果"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/blank_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:textColor="@color/color_grey_999999"
        android:textSize="18sp" />


</LinearLayout>